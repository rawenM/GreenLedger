<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.LoginController"
            stylesheets="@../css/style.css"
            prefHeight="600" prefWidth="800">

    <!-- CENTRE: Formulaire de connexion -->
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="container">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <!-- Card de connexion -->
            <VBox spacing="20" styleClass="card" maxWidth="400">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <!-- Titre -->
                <Label text="Connexion" styleClass="label-title"/>
                <Text text="Plateforme de Financement Participatif" style="-fx-fill: #6B7280;"/>

                <Separator/>

                <!-- Message d'erreur -->
                <Label fx:id="errorLabel" styleClass="label-error" visible="false" wrapText="true"/>

                <!-- Champ Email -->
                <VBox spacing="5">
                    <Label text="Email"/>
                    <TextField fx:id="emailField"
                               promptText="votre.email@example.com"
                               prefHeight="40"/>
                </VBox>

                <!-- Champ Mot de passe -->
                <VBox spacing="5">
                    <Label text="Mot de passe"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="Votre mot de passe"
                                   prefHeight="40"/>
                </VBox>

                <!-- Se souvenir de moi -->
                <CheckBox fx:id="rememberMeCheckbox" text="Se souvenir de moi"/>

                <!-- Bouton de connexion -->
                <Button fx:id="loginButton"
                        text="Se connecter"
                        onAction="#handleLogin"
                        maxWidth="Infinity"
                        prefHeight="45"/>

                <!-- Liens -->
                <HBox spacing="10" alignment="CENTER">
                    <Hyperlink fx:id="forgotPasswordLink"
                               text="Mot de passe oublié ?"
                               onAction="#handleForgotPassword"/>
                    <Label text="|"/>
                    <Hyperlink fx:id="registerLink"
                               text="Créer un compte"
                               onAction="#handleRegister"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- BOTTOM: Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #F3F4F6;">
            <Text text="© 2025 Plateforme Énergie Renouvelable - PIDEV 3A"
                  style="-fx-fill: #6B7280;"/>
        </HBox>
    </bottom>
</BorderPane>