<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.ResetPasswordController"
            prefWidth="450" prefHeight="300">

    <center>
        <VBox spacing="10" style="-fx-padding:20;">
            <Label text="Réinitialiser le mot de passe" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

            <Label text="Entrez le token reçu par email ou SMS:" />
            <TextField fx:id="tokenField" />

            <Label text="Nouveau mot de passe:" />
            <PasswordField fx:id="passwordField" />

            <Label text="Confirmer le mot de passe:" />
            <PasswordField fx:id="confirmPasswordField" />

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="resetButton" text="Réinitialiser" onAction="#handleReset" />
                <Button text="Annuler" onAction="#handleCancel" />
            </HBox>

            <Label fx:id="messageLabel" visible="false" wrapText="true" />
        </VBox>
    </center>
</BorderPane>
