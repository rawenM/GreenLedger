<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.RegisterController"
            fx:id="rootPane"
            prefHeight="700" prefWidth="900"
            styleClass="page">

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <VBox alignment="CENTER" spacing="20" styleClass="content-area">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>

                <VBox spacing="20" maxWidth="600" styleClass="card">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <!-- Titre -->
                    <Label text="Créer un compte" styleClass="page-title"/>
                    <Separator/>

                    <!-- Messages -->
                    <Label fx:id="errorLabel" visible="false" wrapText="true" styleClass="label-error"/>
                    <Label fx:id="successLabel" visible="false" wrapText="true" styleClass="accent-green"/>

                    <!-- Informations personnelles -->
                    <Label text="Informations personnelles" styleClass="section-title"/>

                    <GridPane hgap="15" vgap="15">
                        <!-- Nom -->
                        <Label text="Nom *" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nomField"
                                   promptText="Votre nom"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   styleClass="field"/>

                        <!-- Prenom -->
                        <Label text="Prenom *" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="prenomField"
                                   promptText="Votre prenom"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   styleClass="field"/>

                        <!-- Email -->
                        <Label text="Email *" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="emailField"
                                   promptText="votre.email@example.com"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                                   styleClass="field"/>

                        <!-- Telephone -->
                        <Label text="Telephone" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="telephoneField"
                                   promptText="0612345678"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                                   styleClass="field"/>

                        <!-- Date de naissance -->
                        <Label text="Date de naissance" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dateNaissancePicker"
                                    GridPane.rowIndex="4" GridPane.columnIndex="1"
                                    prefWidth="300"/>

                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="150"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
                        </columnConstraints>
                    </GridPane>

                    <!-- Adresse -->
                    <VBox spacing="5">
                        <Label text="Adresse" styleClass="form-label"/>
                        <TextArea fx:id="adresseField"
                                  promptText="Votre adresse complète"
                                  prefRowCount="3"
                                  styleClass="field textarea"/>
                    </VBox>

                    <Separator/>

                    <!-- Type de compte -->
                    <Label text="Type de compte" styleClass="section-title"/>
                    <ComboBox fx:id="typeUtilisateurCombo" prefWidth="Infinity" styleClass="combo-box"/>

                    <Separator/>

                    <!-- Mot de passe -->
                    <Label text="Securite" styleClass="section-title"/>

                    <VBox spacing="5">
                        <Label text="Mot de passe *" styleClass="form-label"/>
                        <PasswordField fx:id="passwordField"
                                       promptText="Minimum 8 caracteres"
                                       styleClass="field"/>
                        <Label text="Doit contenir: majuscule, minuscule, chiffre, caractere special"
                               styleClass="page-subtitle"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Confirmer le mot de passe *" styleClass="form-label"/>
                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="Confirmez votre mot de passe"
                                       styleClass="field"/>
                    </VBox>

                    <Separator/>

                    <!-- CGU -->
                    <CheckBox fx:id="acceptCGUCheckbox"
                              text="J'accepte les conditions generales d'utilisation"
                              wrapText="true"/>

                    <!-- Boutons -->
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="registerButton"
                                text="S'inscrire"
                                onAction="#handleRegister"
                                prefWidth="150"
                                prefHeight="40"
                                styleClass="btn-primary"/>

                        <Button text="Retour a la connexion"
                                onAction="#handleBackToLogin"
                                prefWidth="180"
                                prefHeight="40"
                                styleClass="btn-secondary"/>
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
