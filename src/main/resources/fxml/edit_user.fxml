<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.EditUserController"
            prefWidth="520" prefHeight="460"
            styleClass="page">

    <center>
        <VBox spacing="12" styleClass="content-area">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox spacing="8" styleClass="card">
                <padding>
                    <Insets top="16" right="16" bottom="16" left="16"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label text="✏️" style="-fx-font-size: 16px;"/>
                    <Label text="Modifier le profil" styleClass="page-title"/>
                </HBox>

                <GridPane hgap="12" vgap="12">
                    <Label text="Nom" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="nomField" styleClass="field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Prenom" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="prenomField" styleClass="field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Email" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" styleClass="field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Telephone" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="telephoneField" styleClass="field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Type" styleClass="form-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="typeCombo" styleClass="combo-box" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Statut" styleClass="form-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="statutCombo" styleClass="combo-box" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <columnConstraints>
                        <ColumnConstraints minWidth="120"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="saveButton" text="Sauvegarder" onAction="#handleSave" styleClass="btn-primary"/>
                    <Button text="Annuler" onAction="#handleCancel" styleClass="btn-secondary"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
